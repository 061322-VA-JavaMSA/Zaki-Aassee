<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<File name="File" fileName="/task-manager/logs/log.log">
			<PatternLayout
				pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<Root level="all">
		<AppenderRef ref="Console"/>
			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>